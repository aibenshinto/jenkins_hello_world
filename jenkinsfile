pipeline {
    agent {
        docker {
            image 'golang:1.20-alpine'
            args '-v $PWD:/go/src/app'
        }
    }

    environment {
        GOPATH = "/go"
        PATH = "${env.PATH}:${env.GOPATH}/bin"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://your-repository-url.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building...'
                sh 'go build -o hello_world .'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'go test ./...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying...'
                sh './hello_world'
            }
        }
    }
}