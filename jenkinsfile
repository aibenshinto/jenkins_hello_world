pipeline {
    
    agent {
        docker {
            image 'docker:latest' // Use the official Docker image
            args '-v /var/run/docker.sock:/var/run/docker.sock' // Bind mount Docker socket
        }
    }
    

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                // Build Docker image
                sh 'docker-compose build'
                // sh 'go run hello_world.go'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                // Add testing steps here (if you have tests for your Go app)
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Deploy the app (start the container)
                sh 'docker-compose up -d'
            }
        }
    }
}